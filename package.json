{
  "name": "cucumber-reports-server",
  "packageManager": "yarn@3.2.2",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@mdx-js/react": "2.1.5",
    "@storybook/addon-actions": "6.5.13",
    "@storybook/addon-docs": "6.5.13",
    "@storybook/addon-essentials": "6.5.13",
    "@storybook/addon-interactions": "6.5.13",
    "@storybook/addon-links": "6.5.13",
    "@storybook/builder-webpack5": "6.5.13",
    "@storybook/manager-webpack5": "6.5.13",
    "@storybook/node-logger": "6.5.13",
    "@storybook/preset-create-react-app": "4.1.2",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "6.5.13",
    "@storybook/testing-library": "0.0.13",
    "@types/eslint": "8.4.9",
    "@types/express": "4.17.14",
    "@typescript-eslint/eslint-plugin": "5.42.0",
    "awesome-typescript-loader": "^5.2.1",
    "css-loader": "6.7.1",
    "eslint": "8.26.0",
    "eslint-config-react": "1.1.7",
    "eslint-config-react-app": "7.0.1",
    "eslint-plugin-jest": "27.1.3",
    "eslint-plugin-react": "7.31.10",
    "eslint-plugin-storybook": "0.6.7",
    "jest-css-modules-transform": "4.4.2",
    "react-docgen-typescript-loader": "3.7.2",
    "sass": "1.55.0",
    "sass-loader": "13.1.0",
    "style-loader": "3.3.1",
    "typescript": "4.8.4"
  },
  "scripts": {
    "update:apps": "yarn workspaces foreach run update-package-json-dependencies && update-package-json-dependencies",
    "update-package-json-dependencies": "npx ncu -u && yarn",
    "start:frontend": "yarn --cwd ./packages/frontend run start",
    "test1": "yarn --cwd ./packages/frontend run test && yarn --cwd ./packages/backend run test",
    "standard-fix-all": "",
    "eslint-fix-all": "npx eslint --fix ./packages/backend/**/**/**/**/*.ts"
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  }
}
